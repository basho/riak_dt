{cover_enabled, true}.
{erl_opts, [
    debug_info,
    warnings_as_errors,
    {platform_define, "^[1-9][0-9]+", namespaced_types}
]}.
{deps, [
    {otp_compat, ".*", {git, "git://github.com/tburghart/otp_compat.git", {branch, "master"}}}
]}.
{eunit_opts, [verbose]}.
{xref_checks, [undefined_function_calls]}.
{edoc_opts, [{preprocess, true}]}.
